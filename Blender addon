class COLLECTION_PT_SelectCollectionPanel(Panel):
    bl_label = "Select Collection Panel"
    bl_idname = "PT_SelectCollectionPanel"
    bl_space_type = 'VIEW_3D'
    bl_region_type = 'UI'
    bl_category = 'Tool'

    def draw(self, context):
        layout = self.layout

        row = layout.row()
        row.operator(SelectCollectionOperator.bl_idname)

def menu_func(self, context):
    self.layout.operator(SelectCollectionOperator.bl_idname)
